<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#065299"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            app:srcCompat="@drawable/image_logo" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="10dp"
            android:text="빈 강의실 조회"
            android:textStyle="bold"
            android:textSize="22dp"
            tools:textColor="#e0ffffff"
            ></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_campus"
            android:layout_width="match_parent"
            android:layout_height="212dp"
            android:layout_marginBottom="3dp"
            android:background="@drawable/image_login" />
    </LinearLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="257dp">

        <Button
            android:id="@+id/btnMain01"
            android:layout_width="180dp"
            android:layout_height="115dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="11dp"
            android:background="#e6e6e6"
            android:text="강의실 조회"
            android:textColor="#aba9a9"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnMain02"
            android:layout_width="180dp"
            android:layout_height="115dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="11dp"
            android:background="#e6e6e6"
            android:text="챗봇"
            android:textColor="#aba9a9"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnMain03"
            android:layout_width="180dp"
            android:layout_height="115dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:background="#e6e6e6"
            android:text="즐겨찾기"
            android:textColor="#aba9a9"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnMain01"
            app:layout_constraintVertical_bias="1.0" />

        <Button
            android:id="@+id/btnMain04"
            android:layout_width="180dp"
            android:layout_height="115dp"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="4dp"
            android:background="#e6e6e6"
            android:text="설정"
            android:textColor="#aba9a9"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnMain02"
            app:layout_constraintVertical_bias="1.0" />





    </android.support.constraint.ConstraintLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btnMainManual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#aba9a9"
            android:background="#f2eded"
            android:text="개인정보 취급 및 설명" />
    </LinearLayout>
</LinearLayout>
